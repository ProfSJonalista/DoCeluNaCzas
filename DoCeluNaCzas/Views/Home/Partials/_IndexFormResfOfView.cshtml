                                    List<SelectListItem> listStopsTo = new List<SelectListItem>(from e in spot.SpotsListIndex select new SelectListItem { Selected = true, Text = Convert.ToString(e.StopDesc), Value = Convert.ToString(e.StopId) });

                                    var sortedListTo = listStopsTo.OrderBy(x => x.Text).ToList();
