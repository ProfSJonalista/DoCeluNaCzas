@model DoCeluNaCzas.Models.ViewModels.Index.IndexModel
@{var spot = Model; }

    <div class="row ">
        <div class="col-md-6 overlap">


            @using (Html.BeginForm("MainFormSearchRoute", "MainPageForm", FormMethod.Post))
            {
                <div class="row ">
                    <div class="col-md-6 overlap">

                            <div class="form-group">
                                @{
                                    ViewData["StopIdFrom"]  = new List<SelectListItem>(from e in spot.SpotsListIndex select new SelectListItem { Selected = true, Text = Convert.ToString(e.StopDesc), Value = Convert.ToString(e.StopId) });

