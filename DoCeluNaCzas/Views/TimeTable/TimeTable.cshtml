@model DCNC.Bussiness.Models.MinuteTimeTable
<script type="text/javascript" src="~/Scripts/SignalR/signalr.js"></script>
<body onload="Connect();">
    <div style="text-align:center;">
        <button id="btnChange" onclick="GetDelays(@ViewBag.stopId);">Opóżnienia</button>
    </div>



    <div class="routes-table-container delays-table-container">

        <table class="table">
            <thead>
                <tr>
                    <th class="col-md-2">Numer linii</th>
                    <th class="col-md-7">Kierunek</th>
                    <th class="col-md-3">Odjazd</th>
                </tr>
            </thead>
            <tbody></tbody>

        </table>

        <div id="res"></div>
    </div>
    <div id="Timetable" class="tabcontent">

        @foreach (var day in Model.MinuteDictionary)
        {
        <div class="week-name">
            @if (day.Key.ToString() == "Weekday")
            {
            <text>
                Dni powszednie
            </text>
            }

            @if (day.Key.ToString() == "Saturday")
            {
            <text>
                Soboty
            </text>
            }

            @if (day.Key.ToString() == "Sunday")
            {
            <text>
                Niedziele i święta
            </text>
            }


        </div>
        foreach (var list in day.Value)
        {
        <text>
            <table class="timetable-table" id="timetableTable">
                <tr class="row-content">
                    <td class="hours">
                        @list.Key
                    </td>

                    @foreach (var minute in list.Value)
                    {
                    <td class="minutes">
                        @minute
                    </td>
                    }
                </tr>
            </table>
        </text>
        }
        }


    </div>



